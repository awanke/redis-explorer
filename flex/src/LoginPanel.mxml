<?xml version="1.0"?>

<s:Panel xmlns:fx="http://ns.adobe.com/mxml/2009"
		  xmlns:mx="library://ns.adobe.com/flex/mx"
		  xmlns:s="library://ns.adobe.com/flex/spark"
		  width="330" height="196" title="登陆">
	<s:layout>
		<s:VerticalLayout verticalAlign="middle" horizontalAlign="center" />
	</s:layout>
	
	<fx:Declarations>
		<mx:StringValidator source="{username}" required="true" property="text" />
		<mx:StringValidator source="{password}" required="true" property="text"/>
	</fx:Declarations>
	
	<mx:Form verticalGap="16">
		<mx:FormItem label="用户:" icon="@Embed('/images/user.png')">
				<mx:TextInput id="username" width="160"/>
		</mx:FormItem>
		<mx:FormItem label="密码:" icon="@Embed('/images/pass.png')">
			<mx:TextInput id="password" width="160" displayAsPassword="true"/>
		</mx:FormItem>
		
	</mx:Form>
    <s:controlBarContent>
		<s:HGroup width="100%" horizontalAlign="right">
			<s:Button label="登陆" />
		</s:HGroup>
	</s:controlBarContent>
</s:Panel>
